<Window x:Class="ShortcutsReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShortcutsReader"
        mc:Ignorable="d"
        Title="Keyboard Shortcuts" Height="550" Width="400"
        Topmost="True"
        Closing="Window_Closing"
        >
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- File path section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="File path:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="txtFilePath" Width="200" Height="25"/>
            <Button Name="btnLoad" Content="Load" Width="60" Height="25" Margin="10,0,0,0" Click="btnLoad_Click"/>
        </StackPanel>

        <!-- Search section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Name="txtShortcutName" Width="200" Height="25" TextChanged="txtShortcutName_TextChanged"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock Grid.Row="2" Name="lblStatus" Text="Paste XML file path and click Load" 
                   Foreground="Gray" Margin="0,0,0,10"/>

        <!-- Shortcuts display -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" Name="txtShortcuts" IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="10"
                     Background="WhiteSmoke" Text="Shortcuts will appear here..."/>

            <!-- 5x4 Grid with numbers 1-20 -->
            <Grid Grid.Row="1" Margin="0,10,0,0" Name="GridWithNumbers">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Row 1 -->
                <TextBox Grid.Row="0" Grid.Column="0" Text="Esc" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="Enter" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="2" Text="Space" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="3" Text="U" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="4" Text="Delete" TextAlignment="Center" VerticalContentAlignment="Center"/>

                <!-- Row 2 -->
                <TextBox Grid.Row="1" Grid.Column="0" Text="1" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="2" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="2" Text="3" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="3" Text="4" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="4" Text="C" TextAlignment="Center" VerticalContentAlignment="Center"/>

                <!-- Row 3 -->
                <TextBox Grid.Row="2" Grid.Column="0" Text="A" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="S" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="2" Text="D" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="3" Text="F" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="4" Text="G" TextAlignment="Center" VerticalContentAlignment="Center"/>

                <!-- Row 4 -->
                <TextBox Grid.Row="3" Grid.Column="0" Text="Z" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="Y" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="2" Text="X" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="3" Text="P" TextAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="4" Text="" TextAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Window>